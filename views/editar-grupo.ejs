<main class="contenedor contenedor-formularios no-padding">
   <h1><%= nombrePagina %> </h1>

   <form class="default-form" method="POST">
      <div class="campo">
         <label for="nombre">Nombre</label>
         <input type="text" value="<%= grupo.nombre %> " name="nombre" id="nombre" placeholder="Nombre Grupo">
      </div>
      <div class="campo descripcion">
         <label for="x">Descripción</label>
         <div class="contenedor-editor">
            <input type="hidden" id="x" name="descripcion" value="<%= grupo.descripcion %> ">
            <trix-editor input="x"></trix-editor>
         </div>
      </div>
      <div class="campo">
         <label>Categoría</label>
         <select name="categoria">
            <option value="" selected disabled>-- Elige una categoría --</option>
            
         </select>
      </div>      
      <div class="campo">
         <label for="url">Sitio Web</label>
         <input type="url" value="<%= grupo.url %> " name="url" id="url" placeholder="Sitio Web">
      </div>
      <div class="campo enviar">         
         <input type="submit" value="Guardar Cambios" class="btn btn-rosa">
      </div>

   </form>

</main>