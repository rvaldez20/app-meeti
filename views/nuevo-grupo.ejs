<main class="contenedor contenedor-formularios no-padding">
   <h1><%= nombrePagina %> </h1>

   <form action="/nuevo-grupo" class="default-form" method="POST">
      <div class="campo">
         <label for="nombre">Nombre</label>
         <input type="text" name="nombre" id="nombre" placeholder="Nombre Grupo">
      </div>
      <div class="campo descripcion">
         <label for="x">Descripción</label>
         <div class="contenedor-editor">
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
         </div>
      </div>
      <div class="campo">
         <label>Categoría</label>
         <select name="categoria">
            <option value="" selected disabled>-- Elige una categoría --</option>
            <% categorias.forEach(cat => { %> 
               <option value="<%= cat.id %> "><%= cat.nombre %> </option>
            <% }) %> 
         </select>
      </div>
      <div class="campo">
         <label for="imagen">Imagen</label>
         <input type="file" name="imagen" id="imagen">
      </div>
      <div class="campo">
         <label for="url">Sitio Web</label>
         <input type="url" name="url" id="url" placeholder="Sitio Web">
      </div>
      <div class="campo enviar">         
         <input type="submit" value="Crear Grupo" class="btn btn-rosa">
      </div>

   </form>

</main>